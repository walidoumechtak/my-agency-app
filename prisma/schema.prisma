generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Agency {
  id        String     @id
  city      String?
  address   String?
  contacts  Contact[]
}

model Contact {
  id        String    @id
  name      String?
  phone     String?
  email     String?
  agencyId  String?
  agency    Agency?   @relation(fields: [agencyId], references: [id])
}

model UserViewLimit {
  id      String   @id @default(cuid())
  userId  String
  date    DateTime
  count   Int
}
